@model ffdc_client_credentials.Models.Countries
@{
    ViewData["Title"] = "results";
    Layout = "~/Views/_Layout.cshtml";
}

<main class="main">
    <div class="row">
        @foreach (var result in Model.countries)
        {
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@result.name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Currency: @result.currency</h6>
                        <h7 class="card-subtitle mb-2 text-muted">Code: @result.alpha3code</h7>
                    </div>
                </div>
            </div>
        }
    </div>
</main>

