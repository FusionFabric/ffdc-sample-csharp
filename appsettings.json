{
  "Finastra": {
    "Oauth2Configuration": {
      "TokenEndpoint": "https://api.fusionfabric.cloud/login/v1/sandbox/oidc/token",
      "AuthorityEndpoint": "https://api.fusionfabric.cloud/login/v1/sandbox",
      "Issuer": "https://api.fusionfabric.cloud/login/v1",
      "B2B": {
        "ClientId": "<%YOUR-CLIENT-ID%>",
        "ClientSecret": "<%YOUR-SECRET-KEY%>",
        "JwkKeyId": "<PUBLIC_KEY_ID_REGISTERED_AT_FINASTRA>",
        "PrivateKey": "./Keys/SampleKeys/private.der"
      },
      "B2C": {
        "ClientId": "<%YOUR-CLIENT-ID%>",
        "ClientSecret": "<%YOUR-SECRET-KEY%>",
        "JwkKeyId": "<PUBLIC_KEY_ID_REGISTERED_AT_FINASTRA>",
        "PrivateKey": "./Keys/SampleKeys/private.der"
      },
      "ClientAuthenticationMethod": "{client_secret | private_key_jwt}",
      "PrivateKeyJwtExpirationTimeInMinutes": 5
    },
    "ApiConfiguration": {
      "BaseUrl": "https://api.fusionfabric.cloud"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
